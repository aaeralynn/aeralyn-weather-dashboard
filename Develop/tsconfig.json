{
  "compilerOptions": {
    "outDir": "./dist" /* Redirect output structure to the 'dist' directory */,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"]
  },
  "include": ["server/src/**/*"],
  "exclude": ["dist"]
}
